---
import BaseSection from '@components/BaseSection';
import EmailLink from '@components/EmailLink';
import AboutSectionTools from '@components/AboutSection/AboutSectionTools';
import AboutSectionHighlightCard from '@components/AboutSection/AboutSectionHighlightCard';
---

<BaseSection title="Sobre Mim" id="about">
  <div
    class="mx-10 flex flex-col text-left font-spaceGrotesk font-bold text-paragraph md:mx-52">
    <div class="grid grid-rows-3 gap-5 md:grid-cols-3 md:grid-rows-1">
      <AboutSectionHighlightCard
        emoji="👨🏻‍💻"
        description="Tenho 19 anos e estou desenvolvendo interfaces com JavaScript e TypeScript a 2 anos"
      />
      <AboutSectionHighlightCard
        emoji="📚️"
        description="Aprofundando meus conhecimentos em UX e frameworks do JavaScript para construção de interfaces"
      />
      <AboutSectionHighlightCard
        emoji="🔎"
        description="Buscando oportunidades para atuar como desenvolvedor, sinta-se livre para entrar em contato"
      />
    </div>

    <EmailLink client:visible />
    <AboutSectionTools />
  </div>
</BaseSection>
